@model BlogCore.Models.Category

@{
    ViewData["Title"] = "Editar Categoria";
}

<br />
<br />
<h3 class="text-center">Crear una nueva Categoria</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-4">
                        <label asp-for="Name"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre de la categor&iacute;a" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-5">
                    <label class="col-4">
                        <label asp-for="Order"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Order" class="form-control" placeholder="Ingrese el orden de visualizaci&oacute;n" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col">
                    <br />
                    <button type="submit" class="btn btn-primary form-control" asp-route="@Model.Id">Actualizar</button>
                </div>
                <div class="col">
                    <br />
                    <a asp-action="Index" class="btn btn-success form-control">Volver a la Lista</a>
                </div>

            </div>
        </div>
    </div>
</form>