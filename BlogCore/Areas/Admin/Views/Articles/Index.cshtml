@{
    ViewData["Title"] = "Articulos";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Artículos</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nuevo Artículo</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblArticulos" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Categor&iacute;a</th>
                <th>Fecha de Creaci&oacute;n</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts {

    <script src="~/js/article.js"></script>
}