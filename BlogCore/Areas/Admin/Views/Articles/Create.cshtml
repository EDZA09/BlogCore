@model BlogCore.Models.Article

@{
    ViewData["Title"] = "Crear Articulo";
}

<br />
<br />
<h3 class="text-center">Crear un nuevo Articulo</h3>
<form method="POST" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-4">
                        <label asp-for="Name"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre del Art&iacute;culo" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-5">
                    <label class="col-4">
                        <label asp-for="Description"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Description" class="form-control" placeholder="Ingrese el orden de visualizaci&oacute;n" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8">
                    <br />
                    <partial name="_ViewCreateBack" />
                </div>

            </div>
        </div>
    </div>
</form>